    style(type="text/css").
      #question {
        font-size: 24px;
        text-align: center;
      }

      #answer {
        width: 150px;
        height: 150px;
        background-color: #29e;
        color: white;
        border-radius: 20px;
        position: relative;
        text-align: center;
        font-size: 18px;
        z-index: 10;
        user-select: none;
        -webkit-transform: translate(0px, 0px);
                transform: translate(0px, 0px);
      }

      .dropzone {
        height: 100%;
        width: 50%;
        top: 0;
        z-index: 1;
        position: absolute;
      }
      .dropzone#left {
        background-color: red;
        left: 0;
      }
      .dropzone#right {
        background-color: green;
        right: 0;
      }

      .demo {
        position: relative;
        height: 300px;
        width: 100%;
      }
      .demo * {
        touch-action: none;
      }

      .indicator {
        font-size: 44px;
        text-align: center;
        display: block;
        margin: 25px 0;
      }

